# ============ Firebase Configuration ============
# Get these from Firebase Console: https://console.firebase.google.com
# Project Settings > General > Your apps > Web app
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789:web:abc123

# Firebase Admin SDK (Server-side)
# Project Settings > Service accounts > Generate new private key
# Stringify the JSON and set as this environment variable
FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Storage bucket name for avatars/logos
# Create bucket in Firebase Console > Storage
NEXT_PUBLIC_AVATAR_BUCKET=PerkOS-Stack-Avatars

# Event Indexing Configuration
ENABLE_EVENT_INDEXING=true
EVENT_INDEXING_START_BLOCK=latest  # or specific block number
EVENT_INDEXING_INTERVAL=12000  # 12 seconds (1 block on Avalanche)

# ============ Wallet Provider Configuration ============
# Choose wallet provider: "para" (default) or "dynamic"
# Both UI wallet and server wallets will use the same provider
NEXT_PUBLIC_WALLET_PROVIDER=para

# ============ Para Wallet Configuration ============
# Required when NEXT_PUBLIC_WALLET_PROVIDER=para
# Get these from Para dashboard: https://developer.getpara.com
NEXT_PUBLIC_PARA_API_KEY=your-para-api-key
PARA_SERVER_API_KEY=your-para-server-api-key

# ============ Dynamic Wallet Configuration ============
# Required when NEXT_PUBLIC_WALLET_PROVIDER=dynamic
# Get these from Dynamic dashboard: https://app.dynamic.xyz
# Docs: https://www.dynamic.xyz/docs/wallets/server-wallets/overview
NEXT_PUBLIC_DYNAMIC_ENVIRONMENT_ID=your-dynamic-environment-id

# Server-side wallet operations (create wallets, sign transactions)
# Generate API token in Dynamic dashboard: Settings > API Keys
DYNAMIC_AUTH_TOKEN=your-dynamic-api-auth-token

# Wallet Encryption Key (32+ characters for AES-256)
# Generate with: openssl rand -hex 32
WALLET_ENCRYPTION_KEY=your-64-character-hex-key-here

# ============ Reown AppKit Configuration ============
# Get project ID from: https://cloud.reown.com
NEXT_PUBLIC_REOWN_PROJECT_ID=your-reown-project-id

# ============ Resend Email Configuration ============
# Get API key from: https://resend.com/api-keys
RESEND_API_KEY=re_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
# Email address to receive contact form submissions
CONTACT_EMAIL=contact@perkos.io
# From email address (must be verified in Resend or use @resend.dev for testing)
RESEND_FROM_EMAIL=noreply@perkos.io

